
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">

    <div class="carousel-item active">
      <%= image_tag portfolio_img(Portfolio.first.main_image, 'main'), width: '100%' %>
      <div class="carousel-caption d-none d-md-block text-block">
        <h5><%= link_to Portfolio.first.title, portfolio_show_path(@portfolio_items) %></h5>
        <p><%= Portfolio.first.subtitle %></p>
      </div>
    </div>
    <div class="carousel-item">
      <img src="http://via.placeholder.com/650x350" alt="Second Slide">
      <div class="carousel-caption d-none d-md-block text-block">
        <h5>Item 2</h5>
        <p>Some sample text</p>
      </div>
    </div>
    <div class="carousel-item">
      <%= image_tag portfolio_img(Portfolio.last.main_image, 'main'), width: '100%' %>
      <div class="carousel-caption d-none d-md-block text-block">
        <h4>Newest Item:</h4>
        <h5><%= link_to Portfolio.last.title, portfolio_show_path(@portfolio_items) %></h5>
        <p><%= Portfolio.last.subtitle %></p>
      </div>
    </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>



